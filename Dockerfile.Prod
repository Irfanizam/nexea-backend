FROM node:16.17.0-bullseye-slim AS development

ENV NODE_ENV production

WORKDIR /app

COPY ./package.json .

RUN yarn install --production

COPY . /app

COPY --chown=node:node . /app

RUN yarn build

USER node

CMD [ "node", "./dist/app.js" ]

